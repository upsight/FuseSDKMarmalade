#!/usr/bin/env mkb
# Builder mkb file for the FuseAPI extension on android
platform LINUX

buildtype (SCONS, ARM)

define S3E_ANDROID

options
{
	dll
    output-name="lib/android/libFuseAPI.so"
    output-name-debug="lib/android/libFuseAPI_d.so"
}
define S3E_BUILD_EXT

subproject FuseAPI_build

#run a post build step to fix return statements in FuseAPI_interface.cpp after it is generated/modified
command
{
	"python ./tools/fix_interface.py"
}
